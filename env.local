# ===== Application =====
APP_NAME=ServiceScope
APP_VERSION=2.0.0
DEBUG=True
ENVIRONMENT=development

# ===== Security =====
# For development, you can use a simple key
# Generate a real one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7

# ===== PostgreSQL (Docker Compose) =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=servicescope
POSTGRES_PASSWORD=admin  # Change this!
POSTGRES_DB=servicescope

# ===== Neo4j (Docker Compose) =====
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=admin  # Change this!

# ===== Redis (Docker Compose) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Leave empty if no password

# ===== Celery =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===== LLM - Using Ollama (Local) =====
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:latest

# ===== Repository Settings =====
REPO_CLONE_DIR=/tmp/servicescope/repos
MAX_REPO_SIZE_MB=500
CLONE_TIMEOUT_SECONDS=300

# ===== Rate Limiting =====
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== Logging =====
LOG_LEVEL=DEBUG  # Show everything in development
LOG_FORMAT=text  # Human-readable format

# ===== CORS (for frontend development) =====
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

